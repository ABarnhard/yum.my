h2 {{title}}
.row
  .col-xs-4.col-xs-offset-1
    form(role='form', novalidate, name='userForm')
      .form-group
        label Email
        input.form-control(type='email', name='email', ng-model='user.email', required, autofocus=true)
      .form-group
        label Password
        input.form-control(type='password', name='password', ng-model='user.password', required, ng-minlength='3')
      button.btn.btn-primary(type='submit', ng-show='userForm.$valid', ng-click='login()') Login
  .col-xs-7
